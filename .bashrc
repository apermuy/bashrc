#
#
#Funcion para extraer 
function extraer()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2) tar xvjf $1 ;;
      *.tar.gz) tar xvzf $1 ;;
      *.bz2) bunzip2 $1 ;;
      *.rar) unrar x $1 ;;
      *.gz) gunzip $1 ;;
      *.tar) tar xvf $1 ;;
      *.tbz2) tar xvjf $1 ;;
      *.tgz) tar xvzf $1 ;;
      *.zip) unzip $1 ;;
      *.Z) uncompress $1 ;;
      *.7z) 7z x $1 ;;
      *) echo "'$1' no se puede extraer con la funcion de bashrc>extract<" ;;
      esac
  else
    echo "'$1' no es un fichero vÃ¡lido."
  fi
}
#
#
#Funcion que muestra los procesos del usuario
function misps() { ps $@ -u $USER -o pid,%cpu,%mem,bsdtime,command ; }
